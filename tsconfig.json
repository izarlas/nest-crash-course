{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "types": ["node", "express", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
